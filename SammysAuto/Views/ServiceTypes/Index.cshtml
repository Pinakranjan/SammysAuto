@model IEnumerable<SammysAuto.Models.ServiceType>
@{
    ViewData["Title"] = "Index";
}

<br />
<h2>Manage Service Types</h2>
<hr />

<div class="form-border">
    <p>
        <a class="btn btn-sm btn-primary" asp-action="Create">Create New</a>
    </p>
    <br />
    <table class="table table-hover table-condensed">
        <tr>
            <th>
                @Html.DisplayNameFor(m => m.ServiceName)
            </th>
            <th></th>
            <th></th>
        </tr>
        @foreach(var items in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => items.ServiceName)
                </td>
                <td>
                    @Html.Partial("_TableButtonPartial", new IndividualButtonPartial { ServiceId = items.Id })
                </td>
            </tr>
        }
    </table>
</div>